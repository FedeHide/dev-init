{
    "package.json": {
        "scripts": {
            "lint": "eslint src/ts/**/*.ts",
            "rollup": "rollup --config --watch",
            "watch-sass": "nodemon -e scss -x \"sass src/scss/main.scss dist/css/main.css\"",
            "watch-ts": "tsc -w"
        }        
    },
    ".eslintrc.json": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": ["standard-with-typescript", "prettier", "plugin:prettier/recommended", "next/core-web-vitals"],
        "plugins": ["prettier"],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "prettier/prettier": "error"
        }
    },
    "tsconfig.json": {
        "compilerOptions": {
            "target": "es2022",
            "module": "ES6",
            "rootDir": "./src/ts",
            "outDir": "./dist/js",
            "sourceMap": true,
            "removeComments": true,
            "noEmitOnError": false,
            "esModuleInterop": true,
            "forceConsistentCasingInFileNames": true,
            "strict": true,
            "noImplicitAny": true,
            "skipLibCheck": true
        }
    }
}
